<?xml version="1.0"?>
<robot name="nevbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find nevbot_description)/urdf/model.gazebo"/>

  <link name="base_link">
    <visual>
      <geometry>
	<box size="0.8 0.4 0.008"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.8 0.4 0.008"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

 <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.1"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.1"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <gazebo reference="left_wheel">
    <mu1 value="0.5"/>
    <mu2 value="0.5"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0"/>
    <origin xyz="-0.15 0.22 0"/>
  </joint>

 <link name="right_wheel">
    <visual>r
      <geometry>
        <cylinder length="0.02" radius="0.1"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.1"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <gazebo reference="right_wheel">
    <mu1 value="0.5"/>
    <mu2 value="0.5"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
    <origin xyz="-0.15 -0.22 0"/>
  </joint>

 <link name="front_left_wheel">
    <visual>
      <geometry>
        <sphere radius="0.046"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.046"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <gazebo reference="front_left_wheel">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="base_to_front_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <axis xyz="1 1 0"/>
    <origin xyz="0.2 0.15 -0.05"/>
  </joint>

 <link name="front_right_wheel">
    <visual>r
      <geometry>
        <sphere radius="0.046"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.046"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0" />
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <gazebo reference="front_right_wheel">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="base_to_front_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <axis xyz="1 1 0"/>
    <origin xyz="0.2 -0.15 -0.05"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://mybot_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="hokuyo"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0.315 0 0.0325"/>
  </joint>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>
</robot>  
